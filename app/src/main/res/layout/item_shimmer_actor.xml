<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatTextView
        android:text="                 "
        android:background="@color/shimmer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:textColor="@color/white"
        android:id="@+id/role"
        android:textSize="@dimen/_18sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageActor"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@color/shimmer"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@id/role"
        app:layout_constraintTop_toBottomOf="@id/role"
        app:riv_corner_radius="@dimen/_3sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_140sdp"/>
    <View
        android:layout_width="1sp"
        android:id="@+id/chiziq"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_height="@dimen/_200sdp"/>
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="@id/imageActor"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:background="@color/shimmer"
        android:id="@+id/nameActor"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@id/imageActor"
        app:layout_constraintRight_toLeftOf="@id/chiziq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginStart="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@id/nameActor"
        app:layout_constraintLeft_toRightOf="@id/imageActor"
        app:layout_constraintRight_toLeftOf="@id/chiziq"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_13sdp"
        android:background="@color/shimmer"
        android:id="@+id/birthDate"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toBottomOf="@id/birthDate"
        app:layout_constraintLeft_toRightOf="@id/imageActor"
        app:layout_constraintRight_toLeftOf="@id/chiziq"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@id/imageActor"
        android:maxLines="7"
        android:id="@+id/summary"
        android:background="@color/shimmer"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_18sdp"
        app:layout_constraintLeft_toLeftOf="@id/imageActor"
        app:layout_constraintTop_toBottomOf="@id/imageActor"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/white"
        android:text="              "
        android:background="@color/shimmer"
        android:id="@+id/best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/best"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_100sdp"
                app:riv_corner_radius="@dimen/_8sdp"
                android:src="@color/shimmer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/imageFilmActor"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_130sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nameFilm"
                android:background="@color/shimmer"
                android:text="                 "
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="              "
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/white"
                android:background="@color/shimmer"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_100sdp"
                app:riv_corner_radius="@dimen/_8sdp"
                android:src="@color/shimmer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_130sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:background="@color/shimmer"
                android:text="                 "
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="              "
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/white"
                android:background="@color/shimmer"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_100sdp"
                app:riv_corner_radius="@dimen/_8sdp"
                android:src="@color/shimmer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/_130sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:background="@color/shimmer"
                android:text="                 "
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="              "
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/white"
                android:background="@color/shimmer"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>