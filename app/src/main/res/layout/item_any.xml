<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.makeramen.roundedimageview.RoundedImageView
    android:layout_width="match_parent"
    android:id="@+id/imageAny"
    app:layout_constraintHeight_min="@dimen/_200sdp"
    app:layout_constraintHeight_max="@dimen/_350sdp"
    app:layout_constraintBottom_toTopOf="@id/textName"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:scaleType="centerCrop"
    app:riv_corner_radius="@dimen/_20sdp"
    android:src="@drawable/mulan1"
    android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_12sdp"
        android:id="@+id/textName"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/imageAny"
        android:ellipsize="end"
        android:paddingStart="@dimen/_4sdp"
        app:layout_constraintLeft_toLeftOf="@id/imageAny"
        app:layout_constraintRight_toRightOf="@id/imageAny"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>