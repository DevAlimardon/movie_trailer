<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.makeramen.roundedimageview.RoundedImageView
    android:layout_margin="@dimen/_5sdp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:riv_corner_radius="@dimen/_30sdp"
    android:scaleType="centerCrop"
    android:id="@+id/imageFilm"
    android:src="@drawable/image1"
    android:layout_width="@dimen/_60sdp"
    android:layout_height="@dimen/_60sdp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/white"
        android:text="Salom Alimardon"
        android:maxEms="6"
        android:gravity="center"
        android:id="@+id/name"
        app:layout_constraintLeft_toLeftOf="@id/imageFilm"
        app:layout_constraintRight_toRightOf="@id/imageFilm"
        app:layout_constraintTop_toBottomOf="@id/imageFilm"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>