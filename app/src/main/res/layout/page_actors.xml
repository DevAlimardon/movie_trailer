<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/view_background2"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:visibility="gone"
    android:id="@+id/layout"
    android:layout_height="match_parent">

<androidx.appcompat.widget.AppCompatTextView
    android:text="Actor, Senarist"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="@dimen/_12sdp"
    android:layout_marginStart="@dimen/_18sdp"
    android:textColor="@color/white"
    android:id="@+id/role"
    android:textSize="@dimen/_18sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageActor"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/mulan1"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@id/role"
        app:layout_constraintTop_toBottomOf="@id/role"
        app:riv_corner_radius="@dimen/_3sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_140sdp"/>
    <View
        android:layout_width="1sp"
        android:id="@+id/chiziq"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_height="@dimen/_200sdp"/>
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="@id/imageActor"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:text="Mell Gibson"
        android:id="@+id/nameActor"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@id/imageActor"
        app:layout_constraintRight_toLeftOf="@id/chiziq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginStart="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@id/nameActor"
        app:layout_constraintLeft_toRightOf="@id/imageActor"
        app:layout_constraintRight_toLeftOf="@id/chiziq"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_13sdp"
        android:text="Birth Date:1992"
        android:id="@+id/birthDate"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toBottomOf="@id/birthDate"
        app:layout_constraintLeft_toRightOf="@id/imageActor"
        app:layout_constraintRight_toLeftOf="@id/chiziq"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@id/imageActor"
        android:maxLines="7"
        android:id="@+id/summary"
        android:text="Leonardo DiCaprio's. DiCaprio has gone from relatively humble beginnings, as a supporting cast member of the sitcom Growing Pains (1985) and low budget horror movies, such as Critters 3 (1991), to a major teenage heartthrob in the 1990s, as the hunky lead actor in movies such as Romeoasasasa"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_18sdp"
        app:layout_constraintLeft_toLeftOf="@id/imageActor"
        app:layout_constraintTop_toBottomOf="@id/imageActor"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/white"
        android:text="@string/best_movie"
        android:id="@+id/best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:id="@+id/recycler"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_best_movie"
        app:layout_constraintTop_toBottomOf="@id/best"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/item_shimmer_actor"/>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>