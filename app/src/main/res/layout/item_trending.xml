<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:src="@drawable/image1"
        android:id="@+id/trendImage"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_28sdp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"/>
<androidx.appcompat.widget.AppCompatTextView
    android:text="First in game"
    android:id="@+id/name"
    android:textSize="@dimen/_18sdp"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="@id/trendImage"
    app:layout_constraintLeft_toLeftOf="@id/trendImage"
    app:layout_constraintTop_toTopOf="@id/trendImage"
    app:layout_constraintVertical_bias="1"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_width="0dp"
    android:maxLines="2"
    android:ellipsize="end"
    app:layout_constraintRight_toLeftOf="@id/star"
    android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:src="@drawable/ic_star"
        android:id="@+id/star"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintRight_toLeftOf="@id/rate"
        app:layout_constraintTop_toTopOf="@id/name"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_16sdp"
        android:text="6.3"
        android:id="@+id/rate"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/star"
        app:layout_constraintBottom_toBottomOf="@id/star"
        app:layout_constraintRight_toRightOf="@id/trendImage"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>