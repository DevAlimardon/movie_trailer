<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:src="@color/shimmer"
        android:id="@+id/trendImage"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/_28sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:text="           "
        android:background="@color/shimmer2"
        android:id="@+id/name"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/trendImage"
        app:layout_constraintLeft_toLeftOf="@id/trendImage"
        app:layout_constraintTop_toTopOf="@id/trendImage"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:id="@+id/star"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintRight_toLeftOf="@id/rate"
        app:layout_constraintTop_toTopOf="@id/name"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_16sdp"
        android:text="       "
        android:background="@color/shimmer2"
        android:id="@+id/rate"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/star"
        app:layout_constraintBottom_toBottomOf="@id/star"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>